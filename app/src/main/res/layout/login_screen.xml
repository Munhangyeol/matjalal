<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/Signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/mont"
        android:text="Login"
        android:textColor="#000000"
        android:textSize="37dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/login_id_edittext"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_marginTop="73dp"
        android:background="@drawable/round_button"
        android:backgroundTint="#FFFAEC"
        android:ems="10"
        android:hint="       아이디"
        android:inputType="textEmailAddress"
        android:textColorHint="#A0A3BD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Signup" />

    <EditText
        android:id="@+id/login_password_edittext"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_button"
        android:backgroundTint="#FFFAEC"
        android:ems="10"
        android:hint="      패스워드"
        android:inputType="textEmailAddress"
        android:textColorHint="#A0A3BD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_id_edittext" />

    <Button
        android:id="@+id/login_login_btn"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/round_button3"
        android:ems="10"
        android:fontFamily="@font/mont"
        android:gravity="center"
        android:hint="로그인"
        android:inputType="textEmailAddress"
        android:textColorHint="#FE7A00"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/login_signup_btn"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_button3"
        android:ems="10"
        android:fontFamily="@font/mont"
        android:gravity="center"
        android:hint="회원가입"
        android:inputType="textEmailAddress"
        android:textColorHint="#FE7A00"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_login_btn" />

    <Button
        android:id="@+id/login_google_btn"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_button3"
        android:ems="10"
        android:fontFamily="@font/mont"
        android:gravity="center"
        android:hint="Google로 로그인하기"
        android:inputType="textEmailAddress"
        android:textColorHint="#FE7A00"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_login_btn" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/mont"
        android:text="Forget Password"
        android:textColor="#FF7A00"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_password_edittext" />
</androidx.constraintlayout.widget.ConstraintLayout>